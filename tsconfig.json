{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "baseUrl": "./",
        "types": ["node"],
        "paths": {
            "@/*": ["src/*"]
        },
        "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
